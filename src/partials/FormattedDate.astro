---
interface Props {
	date: Date;
}

const { date } = Astro.props;

let month = '' + (date.getMonth() + 1);
let day = '' + date.getDate();
let year = date.getFullYear();

if (month.length < 2)
    month = '0' + month;
if (day.length < 2)
    day = '0' + day;

const formattedDate = [year, month, day].join('-');

---

<time datetime={date.toISOString()}>
	{
		// date.toLocaleDateString('en-us', {
		// 	year: 'numeric',
		// 	month: 'short',
		// 	day: 'numeric',
		// })
        formattedDate
	}
</time>
